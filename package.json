{
  "name": "osaka-kenpo",
  "version": "1.0.0",
  "private": false,
  "description": "難解な法律条文を親しみやすい大阪弁に翻訳して解説するWebサイト",
  "license": "MIT",
  "type": "module",
  "author": "kako-jun",
  "homepage": "https://osaka-kenpo.llll-ll.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/kako-jun/osaka-kenpo.git"
  },
  "bugs": {
    "url": "https://github.com/kako-jun/osaka-kenpo/issues"
  },
  "keywords": [
    "law",
    "constitution",
    "osaka-dialect",
    "legal-education",
    "japanese-law",
    "nextjs",
    "typescript",
    "education",
    "kansai-dialect"
  ],
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/tools/generate-laws-metadata.cjs",
    "build": "next build",
    "pages:build": "npx @cloudflare/next-on-pages",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "generate:metadata": "node scripts/tools/generate-laws-metadata.cjs",
    "fetch:roppou": "node scripts/fetch-all-roppou.js",
    "fetch:law": "node scripts/fetch-egov-law.js",
    "refetch:titles": "node scripts/refetch-missing-titles.js",
    "clean:titles": "node scripts/clean-law-titles.js",
    "check:titles": "python3 scripts/find_missing_titles.py",
    "classify:titles": "node scripts/classify-empty-titles.js",
    "db:seed": "node scripts/tools/generate-d1-seed.js > db/seed.sql",
    "db:schema:push": "node scripts/tools/d1-curl-execute.js db/schema-clean.sql",
    "db:seed:push": "node scripts/tools/d1-curl-execute.js db/seed.sql --parallel=10",
    "db:deploy": "npm run db:seed && npm run db:schema:push && npm run db:seed:push",
    "db:update-law": "node scripts/tools/d1-update-law.js",
    "db:list-laws": "node scripts/tools/d1-update-law.js --list",
    "preview": "wrangler pages dev",
    "deploy": "wrangler pages deploy"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "src/data/**/*.yaml": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "js-yaml": "^4.1.1",
    "next": "15.5.2",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "simple-icons": "^16.8.0",
    "xml2js": "^0.6.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "https-proxy-agent": "^7.0.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wrangler": "^3.93.0"
  }
}
